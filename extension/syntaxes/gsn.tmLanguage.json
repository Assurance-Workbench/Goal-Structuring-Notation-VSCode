{
  "name": "gsn",
  "scopeName": "source.gsn",
  "fileTypes": [
    ".gsn"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.gsn",
      "match": "\\b(assumption|context|goal|goal_structure|justification|solution|strategy|undeveloped)\\b|\\b(away:|description:|in_context_of:|supported_by:)\\B"
    },
    {
      "name": "string.quoted.double.gsn",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.single.gsn",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.gsn",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.gsn"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.gsn"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.gsn"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.gsn"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.gsn",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
