{
  "name": "gsn-vscode",
  "version": "0.1.0",
  "description": "Goal Structuring Notation diagram in a VS Code extensions",
  "keywords": [
    "vscode",
    "Goal Structuring Notation",
    "Assurance"
  ],
  "private": true,
  "license": "EPL-2.0",
  "scripts": {
    "clean": "lerna run clean --parallel",
    "lint": "eslint . --ext .ts",
    "prebuild": "yarn clean",
    "build": "lerna run build",
    "watch": "lerna run watch --parallel",
    "package": "lerna run build && lerna run package --parallel",
    "prettier": "prettier --write extension/src/",
    "distribute": "lerna run build && lerna run distribute --parallel",
    "test": "mocha --require ts-node/register test/**/*.ts"
  },
  "devDependencies": {
    "lerna": "^3.20.2",
    "typescript": "^4.3.2",
    "rewire": "^6.0.0",
    "mocha": "^10.2.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "eslint": "^8.35.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "ts-node": "^10.9.1"
  },
  "workspaces": [
    "extension",
    "language-server",
    "webview"
  ],
  "dependencies": {
    "langium": "^1.2.0",
    "langium-sprotty": "^1.2.0",
    "sprotty-elk": "^0.13.0",
    "vscode-languageserver": "^8.0.2",
    "vscode-languageclient": "^8.0.2",
    "reflect-metadata": "^0.1.13",
    "feather-icons": "^4.28.0",
    "sprotty-vscode-webview": "^0.5.0",
    "@kieler/table-webview": "^0.0.5",
    "snabbdom": "^3.5.1",
    "dayjs": "^1.11.8"
  },
  "engines": {
    "vscode": "^1.87.0"
  }
}
